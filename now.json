{
  "name": "yeomalt design",
  "version": 2,
  "routes": [
    {
      "src": "/projects",
      "dest": "src/projects.html"
    },
    {
      "src": "/about",
      "dest": "src/about.html"
    },
    {
      "src": "/api",
      "dest": "api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "src/$1"
    }
  ],
  "builds": [
    {
      "src": "./src/**",
      "use": "@now/static"
    },
    {
      "src": "./api/**",
      "use": "@now/node",
      "config": {
        "maxLambdaSize": "40mb"
      }
    }
  ],
  "env" : {
    "IG_CLIENT_ID": "@ig-client-id",
    "IG_CLIENT_SECRET": "@ig-client-secret",
    "IG_REDIRECT": "@ig-redirect",
    "IG_USERNAME": "@ig-username",
    "IG_PASSWORD": "@ig-password"
  }
}