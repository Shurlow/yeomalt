{
  "name": "yeomalt",
  "version": 2,
  "alias": ["yeomalt.now.sh"],
  "routes": [
    {
      "src": "/projects",
      "dest": "src/projects.html"
    },
    {
      "src": "/about",
      "dest": "src/about.html"
    },
    {
      "src": "/api/(.*)",
      "dest": "api/$1.js"
    },
    {
      "src": "/(.*)",
      "dest": "src/$1"
    }
  ],
  "builds": [
    {
      "src": "./src/**",
      "use": "@now/static"
    },
    {
      "src": "./api/index.js",
      "use": "@now/node"
    },
    {
      "src": "./api/login.js",
      "use": "@now/node"
    },
    {
      "src": "./api/token.js",
      "use": "@now/node"
    },
    {
      "src": "./api/scrape.js",
      "use": "@now/node",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "env" : {
    "IG_CLIENT_ID": "@ig-client-id",
    "IG_CLIENT_SECRET": "@ig-client-secret",
    "IG_REDIRECT": "@ig-redirect",
    "IG_USERNAME": "@ig-username",
    "IG_PASSWORD": "@ig-password",
    "BASE_URL": "@base-url"
  }
}